<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/button_primary_pressed" />
            <padding android:bottom="10dp" android:left="20dp" android:right="20dp" android:top="10dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/button_fb_disabled" />
            <padding android:bottom="10dp" android:left="20dp" android:right="20dp" android:top="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="1dp" android:color="@color/button_primary" />
            <solid android:color="@android:color/transparent" />

            <padding android:bottom="10dp" android:left="20dp" android:right="20dp" android:top="10dp" />
        </shape>
    </item>
</selector>
