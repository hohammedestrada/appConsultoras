<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FichaContent">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="FichaContentOffers">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Ficha.Text" parent="FontLatoBold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Ficha.Text.Subtitle" parent="FontLatoBold">
        <item name="android:textAllCaps">false</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Ficha.Text.Tag" parent="FontLatoBold">
        <item name="android:textAllCaps">true</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Ficha.Text.Brand" parent="FontLatoRegular">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingExtra">1sp</item>
    </style>

    <style name="Ficha.Text.Product" parent="FontLatoBold">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="Ficha.Text.Price" parent="FontLatoBold">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingExtra">01sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="Ficha.Text.PriceClient" parent="FontLatoRegular">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingExtra">0.2sp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="Ficha.Text.Gain" parent="FontLatoRegular">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/magenta</item>
        <item name="android:lineSpacingExtra">0.2sp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="Ficha.Text.Component" parent="FontLatoRegular">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingExtra">0.2sp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="Ficha.Text.Agotado" parent="FontLatoRegular">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>




</resources>
