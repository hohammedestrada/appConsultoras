<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Card Items-->
    <style name="CardItemTitleText" parent="FontLatoBold">
        <item name="android:textSize">@dimen/home_item_title_text_size</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">0.9sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingRight">14dp</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="CardItemSubTitleText" parent="FontLatoRegular">
        <item name="android:textSize">@dimen/home_item_sub_title_text_size</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">0.9sp</item>
        <item name="android:layout_marginTop">@dimen/home_item_title_margin_top</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingRight">14dp</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="CardMenuItemContent" parent="FontLatoRegular">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">0.9sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingEnd">5dp</item>
    </style>

    <style name="CardMenuItemFooter" parent="FontLatoRegular">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">0.9sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingEnd">5dp</item>
    </style>

    <style name="CardItemDividerText">
        <item name="android:layout_marginTop">@dimen/home_item_divider_margin_top</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:background">#d8d8d8</item>
    </style>

</resources>
