<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CuponContentHeader">
        <item name="android:background">@color/primary</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="CuponItemHeader">
        <item name="android:gravity">center</item>
    </style>

    <style name="CuponItemUser" parent="FontLatoBold">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="CuponContentBody">
        <item name="android:background">@drawable/shape_border_cupon</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="CuponCondicionesBody" parent="FontLatoBold">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="CuponItemBody" parent="FontLatoRegular">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="CuponItemRules" parent="FontLatoRegular">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">10dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="CuponItemTerms" parent="FontLatoBold">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">10dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="CuponItemAceptar" parent="FontLatoRegular">
        <item name="android:background">@drawable/selector_button_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CuponContentFooter">
        <item name="android:background">@color/white</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="CuponItemFooter" parent="FontLatoBold">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/primary</item>
        <item name="android:textSize">14dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:padding">10dp</item>
    </style>

</resources>
