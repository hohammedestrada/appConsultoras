<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--    Screen: Splash -->
    <style name="LoginTheme">
        <item name="android:background">@color/window_background</item>
    </style>

    <style name="LoginThemeWhite">
        <item name="android:background">@color/white</item>
    </style>

    <style name="LoginBackground">
        <item name="android:scaleType">fitXY</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="LoginBackground.Form">
        <item name="android:src">@drawable/ic_brand_dark_small</item>
    </style>

    <style name="LoginLogo">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">@dimen/margin_top_login_logo</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom_login_logo</item>
        <item name="android:layout_width">@dimen/width_login_logo</item>
        <item name="android:layout_height">@dimen/height_login_logo</item>

        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@drawable/ic_brand_dark</item>
    </style>

    <style name="LoginTitle">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:layout_marginBottom">14dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/textsize_login_title</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="LoginForm">
        <item name="android:layout_marginLeft">@dimen/margin_login_controls_all</item>
        <item name="android:layout_marginRight">@dimen/margin_login_controls_all</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="LoginInputContent">
        <item name="android:background">@drawable/border_bottom_dark</item>
        <item name="android:layout_marginBottom">@dimen/margin_login_input_content</item>
        <item name="android:paddingTop">@dimen/padding_login_input_content</item>
    </style>

    <style name="LoginInputContent.Text">
        <item name="android:paddingBottom">@dimen/padding_login_input_content</item>
    </style>

    <style name="LoginInputContent.Edit">
        <item name="android:paddingBottom">@dimen/padding_login_input_edit_content</item>
    </style>

    <style name="LoginInputIcon">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">@dimen/size_login_input_icon</item>
        <item name="android:layout_height">@dimen/size_login_input_icon</item>
    </style>

    <style name="LoginInputIcon.Left">
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <style name="LoginInputIcon.Right">
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <style name="LoginInputIcon.Edit">
        <item name="android:layout_marginTop">@dimen/margin_login_input_icon</item>
        <item name="android:layout_centerVertical">false</item>
    </style>

    <style name="LoginInputIcon.Edit.Left">
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <style name="LoginInputIcon.Edit.Right">
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <style name="LoginInputIcon.Margin">
        <item name="android:layout_marginRight">@dimen/margin_login_input_icon_show</item>
    </style>

    <style name="LoginInputIcons">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <style name="LoginInputIcons.Edit">
        <item name="android:layout_centerVertical">false</item>
        <item name="android:layout_marginTop">@dimen/margin_login_input_icon</item>
    </style>

    <style name="LoginInputText" parent="FontLatoRegular">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingStart">@dimen/padding_left_login_input</item>
        <item name="android:paddingRight">@dimen/padding_right_login_input</item>
        <item name="android:textSize">@dimen/textsize_login_input</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">@dimen/size_login_input</item>
    </style>

    <style name="LoginInputHint">
        <item name="android:textColor">@color/text_fourth</item>
        <item name="android:textColorHint">@color/text_fourth</item>
        <item name="android:textSize">@dimen/textsize_login_hint</item>
        <item name="colorControlNormal">@color/text_fourth</item>
        <item name="colorControlActivated">@color/text_fourth</item>
        <item name="colorControlHighlight">@color/text_fourth</item>
    </style>

    <style name="LoginInputEdit" parent="FontLatoRegular">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingStart">@dimen/padding_left_login_input</item>
        <item name="android:paddingRight">@dimen/padding_right_login_input</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/textsize_login_input</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">@dimen/size_login_input</item>
    </style>

    <style name="LoginInputTextEdit" parent="FontLatoRegular">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingStart">@dimen/padding_left_login_input</item>
        <item name="android:paddingRight">@dimen/padding_right_login_input</item>
        <item name="android:textSize">@dimen/textsize_login_input</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:minHeight">@dimen/size_login_input_edit</item>
    </style>

    <style name="LoginForgot" parent="FontLatoRegular">
        <item name="android:layout_gravity">right</item>
        <item name="android:textSize">@dimen/textsize_login_forgot</item>
        <item name="android:color">@color/text_tertiary</item>
    </style>

    <style name="LoginImage">
        <item name="android:layout_marginTop">@dimen/margin_login_button</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">@dimen/size_login_imagen</item>
        <item name="android:layout_height">@dimen/size_login_imagen</item>
    </style>

    <style name="LoginFacebook" parent="ButtonTheme.Facebook">
        <item name="android:clickable">true</item>
    </style>

    <style name="LoginFacebook.Center">
        <item name="android:layout_marginBottom">@dimen/margin_login_facebook</item>
    </style>

    <style name="LoginFacebookIcon">
        <item name="android:layout_marginRight">@dimen/margin_login_facebook_icon</item>
    </style>

    <style name="LoginFacebookTitle">
        <item name="fontPath">fonts/lato-bold.ttf</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textsize_login_button</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="LoginButton" parent="ButtonTheme.Login">
        <item name="android:layout_marginLeft">@dimen/margin_login_controls_all</item>
        <item name="android:layout_marginRight">@dimen/margin_login_controls_all</item>
        <item name="android:textSize">@dimen/textsize_login_button</item>
    </style>

    <style name="LoginButton2" parent="ButtonTheme.Login">
        <item name="android:layout_marginLeft">@dimen/margin_login_controls_all</item>
        <item name="android:layout_marginRight">@dimen/margin_login_controls_all</item>
        <item name="android:textSize">@dimen/textsize_login_button</item>
    </style>


    <style name="LoginNotUser">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">@dimen/margin_login_not_user</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/textsize_login_register</item>
        <item name="android:color">@color/text_tertiary</item>
    </style>

    <style name="LoginChangeUser" parent="FontLatoBold">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">@dimen/margin_login_change_user</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/textsize_login_register</item>
        <item name="android:color">@color/text_secundary</item>
    </style>

    <style name="LoginRegisterLink">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/textsize_login_register</item>
        <item name="android:color">@color/text_tertiary</item>
    </style>

    <style name="LoginRegisterLink.Center">
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <!--    End Screen Splash -->
</resources>
