<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EstadoCuentaContent">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="EstadoCuentaTab">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="EstadoCuentaContentSecondary">
        <item name="android:background">#f8f8f8</item>

    </style>

    <style name="EstadoCuentaTableRowContent">
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
    </style>

    <style name="EstadoCuentaTitle" parent="FontLatoRegular">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingExtra">0.2sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="EstadoCuentaSubtitle" parent="FontLatoLight">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingExtra">0.2sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="EstadoCuentaSubtitleData" parent="FontLatoLight">
        <item name="android:textSize">13sp</item>
        <item name="android:lineSpacingExtra">0.2sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="EstadoCuentaSubtitlePrimary" parent="FontLatoBold">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:lineSpacingExtra">0.2sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="EstadoCuentaSubtitleSecondary" parent="FontLatoRegular">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingExtra">0.2sp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="EstadoCuentaItemText" parent="FontLatoBold">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="EstadoCuentaItemTextData" parent="FontLatoLight">
        <item name="android:textColor">#636363</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="EstadoCuentaItemDataTitle" parent="FontLatoRegular">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">13sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

</resources>
