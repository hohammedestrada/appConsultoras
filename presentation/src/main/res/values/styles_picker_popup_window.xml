<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DatePickerContent">
        <item name="android:background">#f2f7fa</item>
    </style>

    <style name="DatePickerOption" parent="FontLatoLight">
        <item name="android:textSize">@dimen/textsize_datepicker_option</item>
        <item name="android:textColor">@color/datepicker_text</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>

    <style name="DatePickerItemText">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#8a8a8a</item>
        <item name="android:lineSpacingExtra">0.2sp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

</resources>
