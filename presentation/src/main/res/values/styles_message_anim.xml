<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--    Control: Dialog -->
    <style name="DialogMessageAnimContent">
        <item name="android:background">@color/white</item>
        <item name="android:minHeight">450dp</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="MessageAnimPrimaryText" parent="FontLatoBold">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="MessageAnimSecondText" parent="FontLatoRegular">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="MessageAnimTitle" parent="FontLatoBold">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="MessageAnimDescription" parent="FontLatoRegular">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="MessageAnimCondition" parent="FontLatoLight">
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="MessageAnimPostulant" parent="FontLatoBold">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DialogMessageAnimButton" parent="ButtonTheme.Base">
        <item name="android:textSize">14sp</item>
        <item name="android:minWidth">120dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:paddingEnd">25dp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingStart">25dp</item>
        <item name="android:layout_margin">2.5dp</item>
    </style>

    <style name="DialogMessageAnimButtonSecond" parent="ButtonThemeSecond.Base">
        <item name="android:textSize">14sp</item>
        <item name="android:minWidth">120dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:paddingEnd">25dp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingStart">25dp</item>
        <item name="android:layout_margin">2.5dp</item>
    </style>

    <style name="DialogMessageAnimButtonSecond.Cancelar">
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:text">@string/button_cancelar</item>
        <item name="android:textColor">@drawable/selector_button_secondary_text</item>
    </style>

    <style name="DialogMessageAnimButton.Aceptar">
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:text">@string/button_aceptar</item>
    </style>

</resources>
