    <!--NEW-->
    <style name="ClientCardSection">
        <item name="cardElevation">3dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="ClientCardSectionArrow">
        <item name="android:layout_alignBottom">@+id/tvw_personal_data</item>
