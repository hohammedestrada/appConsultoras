<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PaymentFragment">
        <item name="android:background">#f8f8f8</item>
    </style>

    <style name="PaymentContentHeader">
        <item name="android:paddingTop">30dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingBottom">40dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">#f8f8f8</item>
    </style>

    <style name="PaymentContent">
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:layout_marginEnd">25dp</item>
        <item name="android:paddingTop">25dp</item>
        <item name="android:paddingStart">25dp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingEnd">25dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:background">@drawable/bg_note</item>
    </style>

    <style name="PaymentTitle" parent="FontLatoRegular">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:lineSpacingExtra">0.2sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="PaymentMessageLabelTitle" parent="FontLatoBold">
        <item name="android:paddingTop">17dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:lineSpacingExtra">0.2sp</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="PaymentMessageLabel" parent="FontLatoBold">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:lineSpacingExtra">0.2sp</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="PaymentMessageComment" parent="FontLatoRegular">
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:layout_marginEnd">25dp</item>
        <item name="android:paddingTop">25dp</item>
        <item name="android:paddingStart">25dp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingEnd">25dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:minHeight">100dp</item>
        <item name="android:background">@drawable/bg_note</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:lineSpacingExtra">0.2sp</item>
        <item name="android:gravity">start|top</item>
        <item name="android:inputType">textMultiLine</item>

    </style>

    <style name="PaymentButton" parent="ButtonTheme.Base">
        <item name="android:textSize">13sp</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingRight">40dp</item>
        <item name="android:paddingStart">40dp</item>
        <item name="android:paddingEnd">40dp</item>
    </style>

</resources>
