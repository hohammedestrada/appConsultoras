<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NoteTextActivityInputEditText.TextInputEditText" parent="FontLatoRegular">
        <item name="colorControlNormal">#dbdbdb</item>
        <item name="colorControlActivated">@android:color/black</item>
        <item name="colorControlHighlight">@android:color/transparent</item>
        <item name="android:colorFocusedHighlight">@android:color/transparent</item>
        <item name="android:colorActivatedHighlight">@android:color/transparent</item>
        <item name="android:background">@drawable/edt_bg_third_selector</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textCursorDrawable">@color/black</item>
        <item name="android:textColorHint">@color/hint_dark</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_marginBottom">18dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSelectHandleLeft">@drawable/zero_px_transparent</item>
        <item name="android:textSelectHandleRight">@drawable/zero_px_transparent</item>
        <item name="android:textSelectHandle">@drawable/zero_px_transparent</item>
    </style>

    <style name="NoteTextActivityInputEditText" parent="Base.Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@android:color/black</item>
        <item name="colorControlHighlight">@android:color/transparent</item>
        <item name="android:colorFocusedHighlight">@android:color/transparent</item>
        <item name="android:colorActivatedHighlight">@android:color/transparent</item>
        <item name="android:textCursorDrawable">@color/black</item>
        <item name="android:background">@drawable/edt_bg_third_selector</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textColorHint">@color/hint_dark</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">15sp</item>
        <item name="fontPath">fonts/lato-regular.ttf</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_marginBottom">18dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSelectHandleLeft">@drawable/zero_px_transparent</item>
        <item name="android:textSelectHandleRight">@drawable/zero_px_transparent</item>
        <item name="android:textSelectHandle">@drawable/zero_px_transparent</item>
    </style>

    <style name="NoteDetailEditText" parent="FontLatoLight">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/text_filter</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/shape_edittext_no_bottom_line</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="NoteDetailEditTextContainer">
        <item name="android:background">@drawable/shape_edittext_orders_round</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
