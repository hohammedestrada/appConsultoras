<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HomeNavBarTitleText" parent="FontLatoRegular">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:lineSpacingExtra">0.2sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="HomeNavBarSubTitleText" parent="FontLatoRegular">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#A0000000</item>
        <item name="android:lineSpacingExtra">0.2sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="HomeNavBarEditText" parent="FontLatoRegular">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#888888</item>
        <item name="android:lineSpacingExtra">0.2sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="HomeMenuItemContent" parent="FontLatoRegular">
        <item name="android:background">@color/white</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="HomeMenuBelcorpFiftyItemContent" parent="FontLatoRegular">
        <item name="android:background">@drawable/bg_toolbar_gradient_belcorp_fifty_reverse</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="HomeMenuLateralTitleText" parent="FontLatoRegular">
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingEnd">30dp</item>
    </style>

    <style name="HomeMenuItemText" parent="FontLatoRegular">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#AA000000</item>
        <item name="android:lineSpacingExtra">0.2sp</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="HomeMenuLatItemText" parent="FontLatoBold">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#AA000000</item>
        <item name="android:lineSpacingExtra">0.2sp</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="HomeMenuLatBelcorpFiftyItemText" parent="FontLatoBold">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:lineSpacingExtra">0.2sp</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="HomeMenuGridItemText" parent="FontLatoRegular">
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">#c01d1d26</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="HomeMenuSubItemText" parent="FontLatoRegular">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#44000000</item>
        <item name="android:lineSpacingExtra">0.2sp</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="HomeMenuItemDiv" parent="FontLatoRegular">
        <item name="android:background">@color/menu_separator_v2</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>


    <!--Home Items-->
    <style name="HomeItemTitleText" parent="FontLatoBold">
        <item name="android:lineSpacingExtra">0.6sp</item>
        <item name="android:layout_marginTop">@dimen/home_item_title_margin_top</item>
        <item name="android:paddingRight">@dimen/home_item_title_padding_right</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="HomeItemSubTitleText" parent="FontLatoRegular">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:lineSpacingExtra">0.6sp</item>
        <item name="android:paddingRight">@dimen/home_item_title_padding_right</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <!--Home Client -->

    <style name="HomeItemClientTitleText" parent="FontLatoBold">
        <item name="android:textColor">@color/primary</item>
        <item name="android:lineSpacingExtra">0.9sp</item>
        <item name="android:layout_marginTop">@dimen/home_item_title_margin_top</item>
        <item name="android:paddingRight">@dimen/home_item_title_padding_right</item>
        <item name="android:paddingLeft">@dimen/home_item_title_padding_left</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="HomeItemClientSubTitleText" parent="FontLatoRegular">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:lineSpacingExtra">0.9sp</item>
        <item name="android:paddingLeft">@dimen/home_item_title_padding_left</item>
        <item name="android:paddingRight">@dimen/home_item_title_padding_right</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>



    <!-- Home Items Gana+ -->
    <style name="HomeGanaMasItemTitleText" parent="FontLatoRegular">
        <item name="android:layout_marginTop">@dimen/home_item_title_margin_top</item>
        <item name="android:textSize">@dimen/home_item_title_text_size</item>
        <item name="android:textColor">@color/home_belcorp_fifty_color</item>
        <item name="android:lineSpacingExtra">0.9sp</item>
        <item name="android:paddingLeft">@dimen/home_item_title_padding_left</item>
        <item name="android:paddingRight">@dimen/home_item_title_padding_right</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="HomeGanaMasItemSubTitleText" parent="FontLatoBold">
        <item name="android:textSize">@dimen/home_item_title_text_size</item>
        <item name="android:textColor">@color/home_belcorp_fifty_color</item>
        <item name="android:lineSpacingExtra">0.9sp</item>
        <item name="android:paddingLeft">@dimen/home_item_title_padding_left</item>
        <item name="android:paddingRight">@dimen/home_item_title_padding_right</item>
        <item name="android:gravity">start|top</item>
    </style>

    <style name="HomeItemDividerText">
        <item name="android:layout_marginTop">@dimen/home_item_divider_margin_top</item>
        <item name="android:layout_marginLeft">@dimen/home_item_divider_margin_left</item>
        <item name="android:background">#d8d8d8</item>
    </style>

    <style name="HomeCardDetailText" parent="FontLatoRegular">
        <item name="android:layout_marginTop">@dimen/home_item_detail_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/home_item_detail_margin_bottom</item>
        <item name="android:textSize">@dimen/home_item_detail_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:paddingLeft">@dimen/home_item_detail_padding_left</item>
        <item name="android:paddingRight">@dimen/home_item_detail_padding_right</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:minLines">2</item>
        <item name="android:gravity">start|bottom</item>
    </style>

    <style name="HomeItemDetailText" parent="FontLatoRegular">
        <item name="android:layout_marginTop">@dimen/home_item_detail_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/home_item_detail_margin_bottom</item>
        <item name="android:textSize">@dimen/home_item_detail_text_size</item>
        <item name="android:textColor">#888888</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:paddingLeft">@dimen/home_item_detail_padding_left</item>
        <item name="android:paddingRight">@dimen/home_item_detail_padding_right</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:minLines">2</item>
        <item name="android:gravity">start|top</item>
    </style>

    <!--MAIN HOME-->
    <style name="HomeProfileImage">
        <item name="android:layout_marginEnd">@dimen/home_profile_margin_end</item>
        <item name="android:layout_marginStart">@dimen/home_profile_margin_start</item>
    </style>

    <style name="HomeWelcomeMessage" parent="FontLatoBold">
        <item name="android:layout_toEndOf">@id/ivwHomeImage</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/home_welcome_message_text_size</item>
    </style>

    <style name="HomeHeaderDivider">
        <item name="android:layout_below">@id/ivwHomeImage</item>
        <item name="android:layout_marginBottom">@dimen/home_divider_margin_bottom</item>
        <item name="android:layout_marginStart">@dimen/home_divider_margin_start</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="HomeCampaign" parent="FontLatoRegular">
        <item name="android:lineSpacingExtra">3.8sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">@dimen/home_campaign_margin_top</item>
        <item name="android:textSize">@dimen/home_campaign_text_size</item>
    </style>

    <style name="HomeCampaignBold" parent="FontLatoBold">
        <item name="android:lineSpacingExtra">3.8sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">@dimen/home_campaign_margin_top</item>
        <item name="android:textSize">@dimen/home_campaign_text_size</item>
    </style>

    <style name="HomeFAB">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_marginBottom">@dimen/home_fab</item>
        <item name="android:layout_marginEnd">@dimen/home_fab</item>
        <item name="srcCompat">@drawable/ic_add_white</item>
    </style>

</resources>
