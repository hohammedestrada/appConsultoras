<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SeguimientoContent">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="SeguimientoTableRowContent">
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
    </style>

    <style name="SeguimientoTitle" parent="FontLatoBold">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingExtra">0.2sp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="SeguimientoSubtitle"  parent="FontLatoLight">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">0.2sp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingStart">25dp</item>
        <item name="android:paddingEnd">25dp</item>
    </style>

    <style name="SeguimientoSubtitleData" parent="FontLatoBold">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingExtra">0.2sp</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="SeguimientoItemText" parent="FontLatoBold">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="SeguimientoItemTextData" parent="FontLatoLight">
        <item name="android:textColor">#636363</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
