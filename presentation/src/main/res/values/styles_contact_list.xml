<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ContactListContentHeader">
        <item name="android:paddingTop">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="ContactListFilterContent">
        <item name="android:background">@drawable/shape_edittext_round</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ContactListTitleText" parent="FontLatoRegular">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">@dimen/padding_text</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ContactListSubTitleText" parent="FontLatoLight">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">@dimen/padding_text</item>
    </style>

    <style name="ContactFilterText" parent="FontLatoLight">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/text_filter</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/shape_edittext_no_bottom_line</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ContactListItem">
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="ContactListItemContent">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="ContactItemDiv" >
        <item name="android:background">#dbdbdb</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="ContactListItemImage">
        <item name="android:background">@drawable/ic_circle_black</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ContactListItemNameText" parent="FontLatoRegular">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ContactListItemErrorText" parent="FontLatoRegular">
        <item name="android:paddingBottom">3dp</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SyncButton" parent="ButtonTheme.Base">
        <item name="android:layout_marginTop">@dimen/margin_login_button</item>
        <item name="android:layout_marginBottom">@dimen/margin_login_button</item>
        <item name="android:layout_marginLeft">@dimen/margin_login_controls_all</item>
        <item name="android:layout_marginRight">@dimen/margin_login_controls_all</item>
        <item name="android:textSize">@dimen/textsize_login_button</item>
    </style>

    <!-- Toolbar text -->
    <style name="ContactToolbarOptions" parent="android:TextAppearance">
        <item name="fontPath">fonts/lato-regular.ttf</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
    </style>

    <!-- Toolbar text -->
    <style name="ContactToolbarButton" parent="android:TextAppearance">
        <item name="fontPath">fonts/lato-regular.ttf</item>
        <item name="android:textColor">@color/button_disabled</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:background">@null</item>
        <item name="android:paddingEnd">20dp</item>
    </style>

    <style name="ContactToolbarRightButton" parent="android:TextAppearance">
        <item name="fontPath">fonts/lato-regular.ttf</item>
        <item name="android:textColor">@color/button_disabled</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:paddingStart">7dp</item>
        <item name="android:background">@null</item>
        <item name="android:paddingEnd">20dp</item>
    </style>

    <!-- Toolbar text -->
    <style name="ContactToolbarText" parent="android:TextAppearance">
        <item name="fontPath">fonts/lato-regular.ttf</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingStart">1dp</item>
        <item name="android:background">@null</item>
        <item name="android:paddingEnd">20dp</item>
    </style>
</resources>
