<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@android:color/white" />
            <stroke android:width="1dp" android:color="@android:color/black" />
            <padding android:bottom="@dimen/btn_padding_bottom" android:left="@dimen/btn_padding_left" android:right="@dimen/btn_padding_rigth" android:top="@dimen/btn_padding_top" />
            <corners android:radius="@dimen/btn_border_radius" />
        </shape>
    </item>
    <item android:drawable="@drawable/bg_blocked_gray" android:state_enabled="false" />
    <item>
        <shape>
            <solid android:color="@android:color/white" />
            <stroke android:width="1dp" android:color="@android:color/black" />
            <padding android:bottom="@dimen/btn_padding_bottom" android:left="@dimen/btn_padding_left" android:right="@dimen/btn_padding_rigth" android:top="@dimen/btn_padding_top" />
            <corners android:radius="@dimen/btn_border_radius" />
        </shape>
    </item>
</selector>
