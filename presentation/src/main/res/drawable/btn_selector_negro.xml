<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/black" />
            <padding android:bottom="@dimen/btn_padding_bottom" android:left="@dimen/btn_padding_left" android:right="@dimen/btn_padding_rigth" android:top="@dimen/btn_padding_top" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item android:state_enabled="false">

        <shape android:dither="true" android:shape="rectangle">
            <corners android:radius="4dp" />
            <padding android:bottom="@dimen/btn_padding_bottom" android:left="@dimen/btn_padding_left" android:right="@dimen/btn_padding_rigth" android:top="@dimen/btn_padding_top" />
            <solid android:color="@color/black" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/black" />
            <padding android:bottom="@dimen/btn_padding_bottom" android:left="@dimen/btn_padding_left" android:right="@dimen/btn_padding_rigth" android:top="@dimen/btn_padding_top" />
            <corners android:radius="4dp" />
        </shape>
    </item>
</selector>
