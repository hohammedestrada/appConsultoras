<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/disabled" />
            <padding android:bottom="0dp" android:left="16dp" android:right="16dp" android:top="0dp" />
            <corners android:radius="4dp" />
            <stroke android:color="@color/gray_disabled"
                android:width="1dp"
                android:dashWidth="4dp"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/button_disabled" />
            <padding android:bottom="0dp" android:left="16dp" android:right="16dp" android:top="0dp" />
            <corners android:radius="4dp" />
            <stroke android:color="@color/gray_disabled"
                android:width="1dp"
                android:dashWidth="4dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/button_third" />
            <padding android:bottom="0dp" android:left="16dp" android:right="16dp" android:top="0dp" />
            <corners android:radius="4dp" />
            <stroke android:color="@color/gray_disabled"
                android:width="1dp"
                android:dashWidth="4dp"/>
        </shape>
    </item>
</selector>
