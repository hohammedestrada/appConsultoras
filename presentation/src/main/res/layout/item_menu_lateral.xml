<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llt_item_lateral"
        style="@style/HomeMenuItemContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivw_item_imagen"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginEnd="16dp"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:padding="4dp" />

        <TextView
            android:id="@+id/tvw_item_nombre"
            style="@style/HomeMenuLatItemText"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/ivw_item_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:padding="4dp" />

    </LinearLayout>

    <View
        android:id="@+id/view"
        style="@style/HomeMenuItemDiv"
        android:layout_width="match_parent"
        android:layout_height="1px" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvw_sub_menus_laterales"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f2f1f1"
        android:overScrollMode="never"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:visibility="gone" />

</LinearLayout>
