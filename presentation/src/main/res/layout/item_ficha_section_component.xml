<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvwMarca"
        android:textSize="12sp"
        android:visibility="gone"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvwComponent"
        android:layout_marginTop="10dp"
        style="@style/Ficha.Text.Component"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/lltContainerShowDetail"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:orientation="horizontal"
        android:layout_gravity="end"
        android:paddingStart="16dp"
        android:visibility="gone"
        tools:ignore="UseCompoundDrawables">

        <TextView
            android:id="@+id/tvwShowDetailName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/ficha_ver_detalle"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:layout_weight="1"
            android:gravity="end"/>

        <ImageView
            android:id="@+id/ivwArrowRight"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:contentDescription="@null"
            android:src="@drawable/ic_comp_arrow_right"/>

    </LinearLayout>

    <biz.belcorp.mobile.components.design.tone.section.ToneSection
        android:id="@+id/tswSection"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/vwComponentDivider"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_height="1dp"
        android:visibility="gone"
        android:background="@color/gray_2"/>

</LinearLayout>
