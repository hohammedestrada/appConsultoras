<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lltItemIncentiveChildGeneric"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/ivwImage"
        android:layout_width="@dimen/size_image_incentive"
        android:layout_height="@dimen/size_image_incentive"
        android:layout_weight="0"
        android:padding="@dimen/padding_image_incentive"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        app:srcCompat="@drawable/ic_gift_brand"
        android:contentDescription="@null"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvwNivelGift"
            style="@style/IncentivesItemNivelText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="NIVEL 1 : " />

        <TextView
            android:id="@+id/tvwOpcion"
            style="@style/IncentivesItemOpcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="Opcion 99 (Cod: 99999)" />

        <TextView
            android:id="@+id/tvwPremio"
            style="@style/IncentivesItemPremio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="PERFUME YOU!" />

        <TextView
            android:id="@+id/tvwVerContenidoPack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textColor="@color/default_magenta"
            android:textSize="13sp"
            android:text="@string/incentives_view_content" />

    </LinearLayout>

</LinearLayout>
