<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/home_item_bottom_margin"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/layoutCobraDeuda"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical">

        <include
            layout="@layout/view_client_one_index"
            android:layout_width="@dimen/home_bg_left_top_width"
            android:layout_height="@dimen/home_bg_left_top_height" />

        <TextView
            android:id="@+id/tvw_item_title"
            style="@style/HomeItemClientTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/client_card_order_title"
            android:textSize="12sp"
            android:textAllCaps="true" />

        <TextView
            android:id="@+id/tvw_item_sub_title"
            style="@style/HomeItemClientSubTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="@string/client_card_order_subtitle"
            android:textAllCaps="true" />

        <View
            style="@style/HomeItemDividerText"
            android:layout_width="26dp"
            android:layout_height="2dp" />

        <TextView
            android:id="@+id/tvw_item_detail_deuda"
            style="@style/HomeItemDetailText"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</android.support.v7.widget.CardView>
