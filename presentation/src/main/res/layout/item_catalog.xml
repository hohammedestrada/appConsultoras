<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivw_catalog"
        android:layout_width="200dp"
        android:layout_height="266dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:adjustViewBounds="true"
        android:contentDescription="@null" />

    <LinearLayout
        android:id="@+id/llt_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/ivw_share_whats_app"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:background="@color/share_green"
            android:contentDescription="@null"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_whatsapp" />

        <ImageView
            android:id="@+id/ivw_share_facebook"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:background="@color/share_blue"
            android:contentDescription="@null"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_facebook_v2" />

        <ImageView
            android:id="@+id/ivw_share_mail"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:background="@android:color/black"
            android:contentDescription="@null"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_message" />
    </LinearLayout>
</LinearLayout>
