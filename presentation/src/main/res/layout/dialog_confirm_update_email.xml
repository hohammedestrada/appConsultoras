<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingStart="@dimen/dp24"
    android:paddingEnd="@dimen/dp24">

    <ImageButton
        android:id="@+id/ibtCloseDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp24"
        android:background="@color/transparent"
        android:src="@drawable/ic_comp_close" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:layout_width="@dimen/dp80"
            android:layout_height="@dimen/dp80"
            android:layout_marginTop="@dimen/welcome_send_sms_margin_big"
            android:layout_marginBottom="@dimen/dp10"
            app:srcCompat="@drawable/ic_email_sent" />


        <TextView
            style="@style/WelcomeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/welcome_send_sms_margin_big"
            android:layout_marginBottom="@dimen/welcome_send_sms_margin_medium"
            android:text="@string/confirm_email_title" />

        <TextView
            style="@style/WelcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirm_email_description" />

        <TextView
            android:id="@+id/tvwNewEmail"
            style="@style/WelcomeSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/welcome_send_sms_margin_small"
            android:text="@string/my_profile_email_address" />

        <TextView
            style="@style/WelcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/welcome_send_sms_margin_big"
            android:text="@string/confirm_email_additional_question" />

        <TextView
            android:id="@+id/tvwReenviar"
            style="@style/WelcomeTextBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/welcome_send_sms_margin_medium"
            android:layout_marginBottom="@dimen/welcome_send_sms_margin_medium"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/resend_email" />


    </LinearLayout>


</RelativeLayout>

