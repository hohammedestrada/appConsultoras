<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ItemTheme"
    android:id="@+id/rltItem"
    android:gravity="center_vertical"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" >

    <ImageView
        android:id="@+id/ivwLeft"
        android:layout_width="@dimen/size_icon"
        android:layout_height="@dimen/size_icon"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        app:srcCompat="@drawable/ic_check_white"
        android:padding="3dp"
        android:background="@drawable/circle_shape_selector"
        android:visibility="gone"
        android:contentDescription="@null"/>

    <TextView android:id="@+id/tvwItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_centerVertical="true"
        android:textSize="16sp"
        android:layout_toRightOf="@+id/ivwLeft"
        android:layout_toEndOf="@+id/ivwLeft"
        android:textAppearance="@style/SpinnerTextAppearance"/>

    <ImageView android:id="@+id/ivwRight"
        android:layout_width="@dimen/size_icon"
        android:layout_height="@dimen/size_icon"
        android:layout_toRightOf="@+id/tvwItem"
        android:layout_toEndOf="@+id/tvwItem"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        app:srcCompat="@drawable/ic_check_white"
        android:padding="3dp"
        android:background="@drawable/circle_shape_selector"
        android:visibility="gone"
        android:contentDescription="@null"/>

</RelativeLayout>


