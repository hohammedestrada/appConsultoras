<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:weightSum="1">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight=".2"/>

        <ImageView
            android:id="@+id/popUpMsgClose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_close_black"
            android:layout_weight=".8"/>

    </LinearLayout>

    <android.support.v7.widget.AppCompatTextView
        style="@style/textTitleDialog"
        android:id="@+id/popUpMsgTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.v7.widget.AppCompatTextView
        style="@style/textBodyDialog"
        android:id="@+id/popUpMsgBody"/>

    <Button
        android:id="@+id/popUpMsgBtnAceptar"
        style="@style/btnAceptar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_aceptar"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="10dp"/>
</LinearLayout>
