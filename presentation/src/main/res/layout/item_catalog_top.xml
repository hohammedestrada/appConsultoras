<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivw_catalog"
        android:layout_width="@dimen/dp200"
        android:layout_height="@dimen/dp266"
        android:layout_marginBottom="@dimen/dp10"
        android:layout_marginEnd="@dimen/dp10"
        android:layout_marginStart="@dimen/dp10"
        android:layout_marginTop="@dimen/dp4"
        android:adjustViewBounds="true"
        android:contentDescription="@null" />

    <LinearLayout
        android:id="@+id/llt_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp8">

        <ImageView
            android:id="@+id/ivw_share_whats_app"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp40"
            android:layout_marginBottom="@dimen/dp8"
            android:layout_marginEnd="@dimen/dp2"
            android:layout_marginStart="@dimen/dp8"
            android:layout_marginTop="@dimen/dp8"
            android:layout_weight="1"
            android:background="@color/share_green"
            android:contentDescription="@null"
            android:padding="@dimen/dp10"
            app:srcCompat="@drawable/ic_whatsapp" />

        <ImageView
            android:id="@+id/ivw_share_facebook"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp40"
            android:layout_marginBottom="@dimen/dp8"
            android:layout_marginEnd="@dimen/dp2"
            android:layout_marginStart="@dimen/dp2"
            android:layout_marginTop="@dimen/dp8"
            android:layout_weight="1"
            android:background="@color/share_blue"
            android:contentDescription="@null"
            android:padding="@dimen/dp10"
            app:srcCompat="@drawable/ic_facebook_v2" />

        <ImageView
            android:id="@+id/ivw_share_mail"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp40"
            android:layout_marginBottom="@dimen/dp8"
            android:layout_marginEnd="@dimen/dp2"
            android:layout_marginStart="@dimen/dp2"
            android:layout_marginTop="@dimen/dp8"
            android:layout_weight="1"
            android:background="@android:color/black"
            android:contentDescription="@null"
            android:padding="@dimen/dp10"
            app:srcCompat="@drawable/ic_message" />

        <ImageView
            android:id="@+id/ivw_download"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp40"
            android:layout_marginBottom="@dimen/dp8"
            android:layout_marginEnd="@dimen/dp8"
            android:layout_marginStart="@dimen/dp2"
            android:layout_marginTop="@dimen/dp8"
            android:layout_weight="1"
            android:background="@color/gray_body_receive_will"
            android:contentDescription="@null"
            android:padding="@dimen/dp10"
            app:srcCompat="@drawable/ico_descarga" />

    </LinearLayout>
</LinearLayout>
