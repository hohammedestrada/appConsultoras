<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llt_content"
    style="@style/MyOrdersItemContent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvw_description"
            style="@style/MyOrdersItemData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C05 - 14 Mar." />

        <TextView
            android:id="@+id/tvw_monto"
            style="@style/MyOrdersItemData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="S/ 309.56" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llt_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/size_image_my_orders"
                android:layout_height="@dimen/size_image_my_orders"
                android:contentDescription="@null"
                app:srcCompat="@drawable/ic_location_black" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/dp1"
            android:layout_height="@dimen/size_view_separator_my_orders"
            android:layout_gravity="top"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="@color/gray_my_orders" />

        <LinearLayout
            android:id="@+id/llt_doc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivw_doc"
                android:layout_width="@dimen/size_image_my_orders"
                android:layout_height="@dimen/size_image_my_orders"
                android:contentDescription="@null"
                app:srcCompat="@drawable/ic_doc_black" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/dp1"
            android:layout_height="@dimen/size_view_separator_my_orders"
            android:layout_gravity="top"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="@color/gray_my_orders" />

        <LinearLayout
            android:id="@+id/llt_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/size_image_my_orders"
                android:layout_height="@dimen/size_image_my_orders"
                android:contentDescription="@null"
                app:srcCompat="@drawable/ic_search_black" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/dp1"
            android:layout_height="@dimen/size_view_separator_my_orders"
            android:layout_gravity="top"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="@color/gray_my_orders" />

        <LinearLayout
            android:id="@+id/llt_survey"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/surveyImage"
                android:layout_width="@dimen/size_image_my_orders"
                android:layout_height="@dimen/size_image_my_orders"
                android:contentDescription="@null"
                app:srcCompat="@drawable/inactivo" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
