<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ClientCardSection"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:id="@+id/lltPersonalData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp20"
        android:paddingBottom="@dimen/dp16">

        <RelativeLayout
            android:id="@+id/rltHeader"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp18"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvwIncentiveTitle"
                style="@style/CardTitle"
                android:layout_marginLeft="@dimen/dp12"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp18"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/btnMasInfo"
                android:clickable="false"
                android:text="@string/incentives_bright_path"
                android:textAllCaps="true" />

            <LinearLayout
                android:id="@+id/btnMasInfo"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp20"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp12"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvwMasInfo"
                    style="@style/IncentivesSubtitleRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:clickable="false"
                    android:focusable="false"
                    android:paddingStart="0dp"
                    android:paddingTop="0dp"
                    android:paddingEnd="0dp"
                    android:paddingBottom="0dp"
                    android:text="@string/mas_info"
                    android:textAllCaps="false" />

                <ImageView
                    android:id="@+id/ivwArrow"
                    style="@style/CardSectionActiveArrow"
                    android:layout_width="@dimen/size_image_button_all"
                    android:layout_height="@dimen/size_image_button_all"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@null" />
            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/tvewPuntajeObtenido"
            style="@style/IncentivesSubtitleBold"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp12"
            android:visibility="gone"
            android:layout_marginRight="@dimen/dp12"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp6"
            android:clickable="false" />

        <SeekBar
            android:id="@+id/seekbar_premios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:minHeight="15dp"
            android:visibility="gone"
            android:maxHeight="15dp"
            android:layout_marginTop="@dimen/dp15"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:thumbOffset="0dp"
            android:splitTrack="false"
            android:layout_marginLeft="@dimen/dp12"
            android:layout_marginRight="@dimen/dp12"
            android:progressDrawable="@drawable/progressbar_incentive"
            android:thumb="@drawable/ic_progressbar_regalo" />

        <TextView
            style="@style/IncentivesAcumulandoBrightPath"
            android:id="@+id/tvewPuntajeFaltante"
            android:layout_marginTop="@dimen/dp14"
            android:layout_marginLeft="@dimen/dp12"
            android:layout_marginRight="@dimen/dp12"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content" />
    </LinearLayout>
</android.support.v7.widget.CardView>
