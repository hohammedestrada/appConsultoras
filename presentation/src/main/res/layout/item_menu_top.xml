<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlt_item_top"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:paddingStart="3dp"
    android:paddingTop="4dp"
    android:paddingEnd="3dp"
    android:paddingBottom="4dp">

    <ImageView
        android:id="@+id/ivw_item_imagen"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        android:paddingStart="3dp"
        android:paddingTop="3dp"
        android:paddingEnd="3dp"

        />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tvw_item_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivw_item_imagen"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:foregroundGravity="center"
        android:gravity="center"
        android:lines="2"
        android:maxLines="2"
        android:textColor="@drawable/selector_tvw_menu_top"
        android:textSize="@dimen/menu_top_text_size"
        tools:ignore="SmallSP" />

</RelativeLayout>
