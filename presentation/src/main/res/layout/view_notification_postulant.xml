<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_client_card"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="top"
        android:layout_marginStart="15dp"
        android:contentDescription="@null"
        app:srcCompat="@drawable/ic_clock" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/tvw_title"
                style="@style/HoliDayPostulant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="@string/notification_postulant_title" />

            <TextView
                android:id="@+id/tvw_detail"
                style="@style/FontLatoRegular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/notification_postulant_detail"
                android:textColor="@android:color/black"
                android:textSize="11sp"
                android:visibility="gone"
                tools:ignore="SmallSp" />

        </LinearLayout>

    </FrameLayout>

    <ImageView
        android:id="@+id/ivw_expand"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="top"
        android:layout_marginEnd="8dp"
        android:contentDescription="@null"
        app:srcCompat="@drawable/ic_arrow_down_black" />

</LinearLayout>
