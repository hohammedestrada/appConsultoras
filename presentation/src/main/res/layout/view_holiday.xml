<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/rvw_animation"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center">

        <biz.belcorp.consultoras.common.animation.ripple.RippleView
            android:id="@+id/ripple_view"
            android:layout_width="200dp"
            android:layout_height="200dp" />

        <ImageView
            android:id="@+id/ivw_holiday"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:contentDescription="@null" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tvw_holiday_1"
        style="@style/HoliDayPrimaryText"
        android:fontFamily="@font/lato_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rvw_animation"
        android:text="FELIZ DIA" />

    <TextView
        android:id="@+id/tvw_holiday_2"
        style="@style/HoliDaySecondText"
        android:fontFamily="@font/lato_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvw_holiday_1"
        android:layout_marginTop="10dp"
        android:text="¡Celebremos Juntos!" />

    <TextView
        android:id="@+id/tvw_holiday_3"
        style="@style/HoliDayThirdText"
        android:fontFamily="@font/lato_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="¡Participa!" />

</RelativeLayout>
