<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="54dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvwCampania"
            style="@style/FontLatoBold"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:gravity="center"
            android:textSize="20sp"
            tools:text="C18" />

        <ImageView
            android:id="@+id/ivwCheck"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_checked" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.45"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvwLabelAmountVende"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Vende:" />

            <TextView
                android:id="@+id/tvwAmountVende"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="$ 108.457.100" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:background="#979797" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.55"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivwMoney"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:contentDescription="@null"
                app:srcCompat="@drawable/ic_money" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvwLabelAmountGana"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Gana:" />

                <TextView
                    android:id="@+id/tvwAmountGana"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="$ 108.457.100" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
